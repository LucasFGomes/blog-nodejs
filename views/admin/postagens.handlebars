{{#each erros}}
<div class="btn btn-danger">{{text}}</div>
{{else}}

{{/each}}

<h2>Lista de postagens</h2>
<hr>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <small>Slug: {{slug}}</small> <br>
        <small>Categoria: {{categoria.nome}}</small> <br>
        <small>Data da criação da postagem: {{data}}</small> <br>
        <small>Conteúdo: {{conteudo}}</small> <br>
        <a href="/admin/postagens/edit/{{_id}}"> <button class="btn btn-success mt-2">Editar postagem</button> </a>
        <a href="/admin/postagens/deletar/{{_id}}"> <button class="btn btn-danger mt-2">Deletar postagem</button> </a>
    </div>
</div>
{{else}}
<h2>Nenhuma postagem cadastrada!</h2>
{{/each}}

<br>
<a href="/admin/postagens/add"> <button class="btn btn-success">Nova postagem</button> </a>